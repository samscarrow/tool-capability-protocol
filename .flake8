[flake8]
max-line-length = 88
extend-ignore = E203, W503
# E203: Whitespace before ':' (incompatible with Black)
# W503: Line break before binary operator (incompatible with Black)
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    .venv,
    venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401